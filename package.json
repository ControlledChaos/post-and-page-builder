		"imports-loader": "^0.7.1",
		"istyping": "^1.0.0",
		"jquery": "1.12.4",
		"jquery-slimscroll": "^1.3.8",
		"jquery-ui-dist": "^1.12.1",
		"jquery.stellar": "^0.6.2",
