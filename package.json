{
	"name": "boldgrid-editor",
	"version": "1.7.0-rc.5",
	"description": "Post and Page Builder is a standalone plugin which adds functionality to the existing TinyMCE Editor.",
	"main": "gulpfile.js",
	"scripts": {
		"start": "npm-run-all -p start-js start-css karmadev",
		"start-js": "webpack-dev-server --colors",
		"karmadev": "karma start karma.config.js",
		"start-css": "gulp watch",
		"precommit": "lint-staged && npm test",
		"build-webpack": "NODE_ENV=production webpack --colors",
		"format-js": "prettier-eslint \"assets/js/builder/**/*.js\" --write",
		"format-sass": "stylelint \"assets/scss/**/*.scss\" --fix --syntax scss",
		"build": "npm run build-webpack && gulp build && gulp merge-webpack && npm test",
		"test": "cross-env NODE_ENV=test karma start karma.config.js --single-run"
	},
	"lint-staged": {
		"assets/js/builder/**/*.{js,json,scss}": [
			"npm run format-js",
			"git add"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BoldGrid/boldgrid-editor.git"
	},
	"keywords": [
		"Editor",
		"tinyMCE"
	],
	"author": "The BoldGrid Team",
	"license": "GPL-2.0",
	"bugs": {
		"url": "https://github.com/BoldGrid/boldgrid-editor/issues"
	},
	"homepage": "https://github.com/BoldGrid/boldgrid-editor#readme",
	"devDependencies": {
		"@boldgrid/wordpress-tag-sync": "^1.2.1",
		"babel-core": "6.26.0",
		"babel-polyfill": "^6.26.0",
		"cross-env": "^5.1.1",
		"css-loader": "^0.28.7",
		"del": "^3.0.0",
		"gulp": "^3.9.1",
		"gulp-autoprefixer": "^4.0.0",
		"gulp-concat": "^2.6.0",
		"gulp-cssnano": "^2.1.1",
		"gulp-debug": "^3.1.0",
		"gulp-rename": "^1.2.2",
		"gulp-sass": "^3.1.0",
		"gulp-uglify": "^3.0.0",
		"gutil": "^1.6.4",
		"husky": "^0.14.3",
		"jasmine-core": "^2.8.0",
		"karma": "^2.0.0",
		"karma-chrome-launcher": "^2.2.0",
		"karma-jasmine": "^1.1.0",
		"karma-phantomjs-launcher": "^1.0.4",
		"karma-spec-reporter": "^0.0.32",
		"karma-webpack": "^2.0.6",
		"lint-staged": "^6.0.0",
		"prettier": "^1.8.2",
		"prettier-eslint": "^8.2.2",
		"prettier-eslint-cli": "^4.4.0",
		"pump": "^3.0.0",
		"run-sequence": "^2.2.1",
		"style-loader": "^0.19.1",
		"stylelint": "^8.2.0"
	},
	"dependencies": {
		"@boldgrid/components": "^2.12.0",
		"@boldgrid/controls": "^0.12.1",
		"animate.css": "^3.5.2",
		"babel-eslint": "^8.0.2",
		"babel-loader": "^7.1.2",
		"babel-minify-webpack-plugin": "^0.2.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"boldgrid-theme-framework": "https://github.com/BoldGrid/boldgrid-theme-framework.git#dev",
		"bootstrap-sass": "^3.3.7",
		"copy-webpack-plugin": "^4.0.1",
		"eslint": "^4.6.1",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-loader": "^1.9.0",
